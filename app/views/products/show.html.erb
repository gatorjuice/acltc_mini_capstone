<div class="product_view">
  <%= form_tag "/orders", method: :post do %>
  <div class="form-group">
    <%= label_tag :quantity, "How Many:" %>
    <%= text_field_tag :quantity %>
    <%= hidden_field_tag :product_id, @product.id %>
  </div>
  <%= submit_tag "Add to Order" %>
  <% end %>
  <h1><%= @product.name %></h1>
  <button type="button" class="btn btn-default"><%= number_to_currency(@product.price) %></button>
  <p>Estimated Sales Tax: <%= number_to_currency(@product.sales_tax) %></p>
  <p>Estimated Total: <%= number_to_currency(@product.total) %></p>
  <p><%= @product.quantity %></p>
  <p><%= @product.description %></p>
  <p>Made by: <%= @product.supplier.name if @product.supplier %></p>
  <div class="row">
  <% @product.photos.each do |photo| %>
  <div class="col-xs-6 col-md-3">
    <a href="" class="thumbnail">
      <%= image_tag(photo.url) %>
    </a>
  </div>
  <% end %> 
</div>

  <%= image_tag(@product.photos.first.url) if @product.photos.first %>

  <div>
  <%= link_to 'Edit', "/products/#{@product.id}/edit" %>
  </div>
  <div>
  <%= link_to "Delete", "/products/#{@product.id}", method: :delete %>
  </div>  
</div>
